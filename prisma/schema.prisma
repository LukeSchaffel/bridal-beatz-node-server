// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AuthUsers {
  user_id       Int        @id @default(autoincrement())
  first_name    String     @db.VarChar(45)
  last_name     String     @db.VarChar(45)
  email         String     @unique @db.VarChar(45)
  password_hash String     @db.VarChar(60)
  phone         String?    @db.VarChar(45)
  accounts      Accounts[]
  is_admin      Boolean    @default(false)

  @@map("users")
}

model Accounts {
  account_id  Int               @id @default(autoincrement())
  first_name  String            @db.VarChar(45)
  last_name   String            @db.VarChar(45)
  email       String            @unique @db.VarChar(45)
  phone       String?           @db.VarChar(45)
  user_id     Int
  type        ACCOUNT_TYPE_ENUM @default(vendor)
  vendor_type VENDOR_TYPE_ENUM?
  client_type CLIENT_TYPE_ENUM?
  genre       GENRE_ENUM[]      @default([])
  bio         String?           @db.VarChar(160)
  about_me    String?

  locations Locations[]
  links     Links[]
  authUser  AuthUsers   @relation(fields: [user_id], references: [user_id])
  reviews   Reviews[]
}

model Links {
  link_id    Int    @id @default(autoincrement())
  account_id Int
  title      String @db.VarChar(45)
  url        String @db.VarChar(45)

  account Accounts @relation(fields: [account_id], references: [account_id])
}

model Locations {
  location_id Int      @id @default(autoincrement())
  account_id  Int
  city        String
  state       String
  zip         String
  account     Accounts @relation(fields: [account_id], references: [account_id])
}

model Reviews {
  review_id  Int    @id @default(autoincrement())
  content    String
  rating     Float
  account_id Int
  creator_id Int

  account Accounts @relation(fields: [account_id], references: [account_id])
}

enum GENRE_ENUM {
  pop
  rock
  rap
  hiphop
  country
  randb
  jazz
  electronic
  funk
  reggae
  disco
  classical
  church
}

enum ACCOUNT_TYPE_ENUM {
  client
  vendor
  admin
}

enum VENDOR_TYPE_ENUM {
  band
  dj
  musician
}

enum CLIENT_TYPE_ENUM {
  bride
  groom
  planner
  venue
}
